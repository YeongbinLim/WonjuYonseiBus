<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Choose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/schedual_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/agenda"
            android:padding="40dp"
            android:clickable="true"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:text="시간표"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:background="#a6a6a5"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/hacguen_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:drawableLeft="@drawable/bus_icon"
            android:text="학관(to 터미널)"
            android:padding="40dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlue"
            tools:layout_editor_absoluteX="107dp" />

        <View
            android:layout_width="match_parent"
            android:background="#a6a6a5"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/samguri_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/bus_icon"
            android:gravity="center"
            android:padding="40dp"
            android:textColor="@color/colorBlue"
            android:text="매지리(to 터미널)"
            android:textSize="20dp" />
        <View
            android:layout_width="match_parent"
            android:background="#a6a6a5"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/saedong_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/bus_icon"
            android:padding="40dp"
            android:clickable="true"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:text="매지리(to 연세대)"
            android:textSize="20dp" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>